{% extends "GSBgsbBundle::layout.html.twig" %}
{% block body %}
    {% block bloc1 %}
        <div class="erreur">
            {% for message in app.session.flashbag.get('erreurLogMdp') %}
                {{ message }}
            {% endfor %}
        </div>

        <div id="container" class="container">
            <div class="jumbotron">
                <h2>Identification Visiteur</h2>
                <hr>
                <div class="containerForm">
                    <form method="POST" {{ form_enctype(form) }} class="form-horizontal " >
                        {{ form_errors(form) }}
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ form_label(form.login, "Login") }}</label>
                            {{ form_errors(form.login) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.login) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ form_label(form.mdp, "Mot de passe") }}</label>
                            <div class="col-sm-10">
                                {{ form_errors(form.mdp) }}
                                {{ form_widget(form.mdp) }} 
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ form_label(form.profil, "Profil") }}</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.profil) }} 
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <input class ="btn btn-info" type="submit" value="Valider"name="valider">
                                <input class="btn btn-danger" type="reset" value="Annuler" name="annuler">
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>

    {% endblock %}
{% endblock %}